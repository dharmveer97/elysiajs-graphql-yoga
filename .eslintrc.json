{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:sonarjs/recommended",
    "plugin:prettier/recommended" // Add this line
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "sonarjs", "prettier"], // Add prettier here
  "rules": {
    // Your existing rules
    "prettier/prettier": "error" // Ensure prettier errors are shown
  },
  "ignorePatterns": ["example/*", "test/**/*"]
}
